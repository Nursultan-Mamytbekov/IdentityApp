<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Вход</h3>
            </div>
            <div class="card-body">
                <form asp-action="SignIn" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                        <input asp-for="Email" type="text" class="form-control" placeholder="Почта">

                    </div>
                    <div class="input-group form-group" style="margin-top: 20px;
">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-key"></i>
                            </span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
                    </div>

                    <div class="form-group">
                        <div class="text-center" style="margin-top: 25px;">
                            <input type="submit" value="Войти" class="btn login_btn">
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?<a href="#">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="#">Forgot your password?</a>
                </div>
            </div>
        </div>
    </div>
</div>
